---
import '../styles/global.css';
---

<div>
    <h4>
        M4
    </h4>
</div>

<style>
    div {
        margin-top: 14px;
        margin-left: 28px;
    }

    h4 {
        margin-block: 0;
        margin-inline: 0;
        margin: 0;
        color: var(--title-color);
        font-family: var(--noto-serif-display-font);
        font-size: var(--font-size-24);
        font-weight: 500;
    }

    @media (min-width: 481px) {
        div {
            margin-left: 40px;
            margin-top: 28px;
        }

        h4 {
            font-size: var(--font-size-36);
        }
    }
</style>