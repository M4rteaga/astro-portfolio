---
interface Props {
	title: string;
	date: string;
	link: string;
}

const { title, date, link } = Astro.props;
---

<a href={link}>
	<h4 class="writing-title">{title}</h4>
	<div class="dotted-separation"></div>
	<p class="writing-date">{date}</p>
</a>

<style>
	a {
		text-decoration: none;
		color: var(--body-color);
		display: flex;
		flex-direction: row;
		align-items: baseline;
		gap: 16px;
		width: 100%;
		margin: 0px -24px;
		padding: 12px 24px;
		border-radius: 6px;
		cursor: pointer;
	}

	a:hover {
		background-color: var(--gray4);
		color: var(--gray12);
	}

	a:hover .writing-title,
	a:hover .writing-date {
		color: var(--gray12);
	}

	p,
	h4 {
		margin: 0;
		margin-block: 0;
		margin-inline: 0;
	}

	.writing-title {
		font-size: 16px;
		font-weight: 400;
		line-height: 1.5;
		color: var(--body-color);
	}

	.dotted-separation {
		flex: 1 1 0%;
		border-top: 2px dotted var(--body-color);
		box-sizing: border-box;
	}

	.writing-date {
		font-size: var(--font-size-14);
		font-weight: 300;
		color: var(--gray11);
	}
</style>
